# TYPO3 Fluid Storybook Integration Environment Variables
# Copy this file to .env and fill in your values

# Required: TYPO3 Fluid Rendering API URL
# This is the endpoint that renders your Fluid templates
# Example: https://your-typo3-site.com/api/fluid/render
TYPO3FLUID_STORYBOOK_API_URL=https://your-typo3-site.com/api/fluid/render

# Optional: TYPO3 Data API Base URL for dynamic content loading
# Used for fetching real data in Storybook loaders
# Example: https://your-typo3-site.com/api/data
STORYBOOK_TYPO3_DATA_API_BASE_URL=https://your-typo3-site.com/api/data

# Optional: For Vite-based Storybook, you might need VITE_ prefix
# VITE_TYPO3FLUID_STORYBOOK_API_URL=https://your-typo3-site.com/api/fluid/render
# VITE_TYPO3_DATA_API_BASE_URL=https://your-typo3-site.com/api/data

# Development Settings
NODE_ENV=development

# Storybook Configuration
STORYBOOK_PORT=6006

# Optional: Authentication for TYPO3 APIs (if required)
# TYPO3_API_TOKEN=your-api-token-here
# TYPO3_API_USERNAME=your-username
# TYPO3_API_PASSWORD=your-password

# Optional: CORS Configuration (if different from main domain)
# CORS_ORIGIN=http://localhost:6006

# Optional: Cache Configuration
# DISABLE_FLUID_CACHE=false
# CACHE_TTL=3600

# Optional: Debug Mode
# DEBUG_MODE=true
# LOG_LEVEL=info

# Optional: Performance Monitoring
# ENABLE_PERFORMANCE_MONITORING=false

# Git Hooks (for development)
# HUSKY_SKIP_INSTALL=1
